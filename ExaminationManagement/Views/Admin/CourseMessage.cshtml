@model IEnumerable<ExaminationManagement.Models.DataBaseModels.Course>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    @Styles.Render("~/Content/bootstrap-table")
    @Scripts.Render("~/Scripts/bootstrap-table")
    <script>
        $(document).ready(function () {
            var tea;
            var years;
            $.ajax({
                url: '/Admin/TeacherList',
                type: 'get',
                async: false,
                success: function (result) {
                    tea = result;
                }
            });
            $.ajax({
                url: '/Admin/GetStudentYears',
                type: 'get',
                async: false,
                success: function (result) {
                    years = result;
                }
            });
            $('#tb_course').bootstrapTable({
                sortName: 'Name',
                pagination: true,
                striped: true,
                search: true,
                showRefresh: true,
                showColumns: true,
                clickToSelect: true,
                showPaginationSwitch: true,
                onRefresh: function () {
                    location.reload();
                },
                columns: [
                    {
                        field: 'courseId',
                        visible: false
                    },
                    {
                        field: 'name',
                        sortable: true,
                        editable: {
                            validate: function (v) {
                                if (v == '')
                                    return '输入不能为空';
                            }
                        }
                    },
                    {
                        field: 'credit',
                        sortable: true,
                        editable: {
                            type: 'number',
                            min: 0,
                            step:0.5,
                            value: 3,
                            validate: function (v) {
                                if (v == '')
                                    return '输入不能为空';
                            }
                        }
                    },
                    {
                        field: 'grade',
                        sortable: true,
                        editable: {
                            type: 'select',
                            title: '选择年级',
                            source: years
                        }
                    },
                    {
                        field: 'teacher',
                        sortable: true,
                        editable: {
                            type: 'select',
                            title: '选择教师',
                            source: tea
                        }
                    },{}
                ],
                onEditableSave: function (field, row, oldValue, $el) {
                    $.ajax({
                        url: '/Admin/EditCourse',
                        data: {
                            CourseId: row.courseId,
                            CourseName: row.name,
                            Credit: row.credit,
                            Grade: row.grade,
                            Teacher: row.teacher
                        },
                        type: 'get'
                    });
                }
            });
        });
    </script>
}

<table id="tb_course">
    <thead>
        <tr>
            <th>课程ID</th>
            <th>课程名称</th>
            <th>学分</th>
            <th>年级</th>
            <th>教师</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CourseId)</td>
                <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                <td>@Html.DisplayFor(modelItem => item.Credit)</td>
                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                <td>@Html.DisplayFor(modelItem => item.Teacher)</td>
                <td>@Html.ActionLink("删除", "CourseDelete", new { id = item.CourseId })</td>
            </tr>
        }
    </tbody>
</table>
