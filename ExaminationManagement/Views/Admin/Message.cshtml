@model IEnumerable<ExaminationManagement.Models.DataBaseModels.Course>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    @Styles.Render("~/Content/bootstrap-table")
    @Scripts.Render("~/Scripts/bootstrap-table")
    <script>
        $(document).ready(function () {
            $('#tb_course').bootstrapTable({
                sortName: 'Name',
                pagination: true,
                striped: true,
                search: true,
                showRefresh: true,
                showColumns: true,
                clickToSelect: true,
                showPaginationSwitch: true,
                columns: [
                    {
                        field: 'name',
                        sortable: true,
                        editable: {
                            validate: function (v) {
                                if (v == '')
                                    return '输入不能为空';
                            }
                        }
                    },
                    {
                        field: 'credit',
                        sortable: true,
                        editable: {
                            type: 'number',
                            min: 0,
                            step:0.5,
                            value: 3
                        }
                    },
                    {
                        field: 'grade',
                        sortable: true,
                        editable: {
                            type: 'select',
                            title:'选择年级',
                            source: [{
                                value: 1,
                                text:'text'
                            }]
                        }
                    },
                    {
                        field: 'teacher',
                        sortable: true,
                        editable: {
                            type: 'select',
                            title: '选择教师',
                            source: [{
                                value: 1,
                                text: 'text'
                            }]
                        }
                    },{}
                ]
            });
        });
    </script>
}

<table id="tb_course">
    <thead>
        <tr>
            <th>课程名称</th>
            <th>学分</th>
            <th>年级</th>
            <th>教师</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                <td>@Html.DisplayFor(modelItem => item.Credit)</td>
                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                <td>@Html.DisplayFor(modelItem => item.Teacher)</td>
                <td>@Html.ActionLink("删除", "CourseDelete", new { id = item.CourseId })</td>
            </tr>
        }
    </tbody>
</table>
